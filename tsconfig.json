{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build/es",
    "paths": {
      "@api/*": ["./src/pages/api/*"],
      "@pages/*": ["./src/pages/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./src/styles/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [],
    "typeRoots": ["node_modules/@types", "./src/types"],
    "incremental": true
  },
  "files": [".eslintrc.json"],
  "include": ["src", "types.ts"],
  "exclude": ["**/*/build", "**/*/node_modules", "build", "node_modules", "node_modules/@types"]
}
